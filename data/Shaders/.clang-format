Standard: c++17
BreakConstructorInitializers: BeforeComma
BinPackArguments: false
BraceWrapping:
  AfterControlStatement: true
  AfterFunction: true
  BeforeElse: true
BreakBeforeBraces: Custom
FixNamespaceComments: false
MaxEmptyLinesToKeep: 2

IndentWidth: 4
TabWidth: 4
ConstructorInitializerIndentWidth: 4
AllowAllConstructorInitializersOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
AllowAllArgumentsOnNextLine: false
AllowShortEnumsOnASingleLine: false
AllowShortBlocksOnASingleLine: Empty #mostly for empty ctors
BinPackArguments: true
BinPackParameters: false
ColumnLimit: 180
AccessModifierOffset: -4
IndentPPDirectives: BeforeHash

#BitFieldColonSpacing: Both
PointerAlignment: Left
#SpaceAroundPointerQualifiers: Before
SpacesInSquareBrackets: false
SpacesInParentheses: false
SpacesInContainerLiterals: false
SpacesInConditionalStatement: false
SpacesInAngles: false
AllowShortFunctionsOnASingleLine: InlineOnly
AlignAfterOpenBracket: Align
AlignConsecutiveAssignments: true
AlignConsecutiveMacros: true #hopefully not really used
AlignTrailingComments: true
AlignConsecutiveDeclarations: true
BreakBeforeBinaryOperators: true
FixNamespaceComments: true
CompactNamespaces: true #only cause it is simple to change it to nested one later

UseTab: Always
AlignConsecutiveDeclarations: true

SortIncludes: false

WhitespaceSensitiveMacros: ["@struct"]